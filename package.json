    "@types/pluralize": "0.0.29",
    "eslint": "^7.0.0",
    "eslint-config-synacor": "^3.0.5",
    "html-pdf": "~2.2.0",
    "husky": "~4.2.5",
    "jest": "~25.5.4",
    "mock-fs": "~4.12.0",
    "node-sass": "~4.14.1",
    "pluralize": "~8.0.0",
    "preact-cli": "^3.0.0-rc.9",
    "sass-loader": "~8.0.2",
    "sirv-cli": "^0.4.5",
    "ts-jest": "~25.5.1",
    "ts-node": "~8.10.1",
    "typescript": "~3.8.3"
  },
  "dependencies": {
    "preact": "^10.4.1",
    "preact-render-to-string": "^5.1.8"
