    "@types/lodash": "~4.14.151",
    "date-fns": "~2.13.0",
    "lodash": "~4.17.15",
    "preact": "^10.4.1",
    "preact-render-to-string": "^5.1.8",
    "showdown": "~1.9.1"
  }
