  "main": "index.js",
  "scripts": {
    "prebuild": "run-s build:prerenderUrls",
    "build": "preact build --prerenderUrls ./prerender-urls/prerender-urls.js",
    "serve": "sirv build --cors --single",
    "predev": "run-s build:prerenderUrls",
    "dev": "preact watch --prerenderUrls ./prerender-urls/prerender-urls.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest --coverage",
    "prebuild:cv": "npm run build",
    "build:cv": "ts-node ./scripts/create-pdf.ts",
    "postbuild:cv": "cp -r ./src/static/admin ./dist/",
    "build:prerenderUrls": "rimraf ./prerender-urls/ && tsc --build tsconfig.prerender-urls.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcomontalbano/curriculum.git"
  },
  "keywords": [],
  "author": "Marco Montalbano <marcomontalbano.work@gmail.com> (https://marcomontalbano.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcomontalbano/curriculum/issues"
  },
  "homepage": "https://github.com/marcomontalbano/curriculum#readme",
  "eslintIgnore": [
    "build/*",
    "prerender-urls/*",
    "dist/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@testing-library/preact": "~1.0.2",
    "@types/html-pdf": "~2.2.0",
    "@types/jest": "~25.2.1",
    "@types/mock-fs": "~4.10.0",
    "@types/node": "~13.13.5",
    "@types/pluralize": "0.0.29",
    "@types/showdown": "~1.9.3",
    "@typescript-eslint/eslint-plugin": "~2.31.0",
    "@typescript-eslint/parser": "~2.31.0",
    "eslint": "^7.0.0",
    "eslint-plugin-react": "~7.19.0",
    "html-pdf": "~2.2.0",
    "husky": "~4.2.5",
    "jest": "~25.5.4",
    "lint-staged": "~10.2.2",
    "mock-fs": "~4.12.0",
    "node-sass": "~4.14.1",
    "npm-run-all": "~4.1.5",
    "pluralize": "~8.0.0",
    "preact-cli": "^3.0.0-rc.9",
    "prettier": "~2.0.5",
    "rimraf": "~3.0.2",
    "sass-loader": "~8.0.2",
    "sirv-cli": "^0.4.5",
    "ts-jest": "~25.5.1",
    "ts-node": "~8.10.1",
    "typescript": "~3.8.3"
